{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./typings", "thirdparty.d.ts", "./node_modules/@types", "./node_modules/**/*.d.ts"]
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    "typings/**/*.d.ts",
    "*.xml",
    "*.cert",
    "*.pem"
  ]
}
